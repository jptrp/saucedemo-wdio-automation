{
  "name": "saucedemo-wdio-automation",
  "version": "1.0.0",
  "description": "Enterprise-grade E2E test automation framework for SauceDemo using WebDriverIO, TypeScript, and best practices",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.ts",
    "test:smoke": "wdio run wdio.conf.ts --suite smoke",
    "test:regression": "wdio run wdio.conf.ts --suite regression",
    "test:e2e": "wdio run wdio.conf.ts --suite e2e",
    "test:headless": "HEADLESS=true wdio run wdio.conf.ts",
    "report": "allure generate allure-results --clean && allure open",
    "report:generate": "allure generate allure-results --clean",
    "report:open": "allure open allure-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepare": "husky install",
    "clean": "rm -rf allure-results allure-report reports node_modules package-lock.json",
    "pretest": "npm run lint"
  },
  "keywords": [
    "webdriverio",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "selenium",
    "page-object-model",
    "test-framework"
  ],
  "author": "Dustin Braun",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^8.28.0",
    "@wdio/local-runner": "^8.28.0",
    "@wdio/mocha-framework": "^8.28.0",
    "@wdio/spec-reporter": "^8.28.0",
    "@wdio/types": "^8.41.0",
    "allure-commandline": "^2.34.1",
    "chromedriver": "^130.0.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "wdio-chromedriver-service": "^8.1.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
